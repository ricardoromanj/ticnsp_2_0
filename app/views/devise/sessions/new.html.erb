<% content_for :title, 'Iniciar sesión' %>
<style>
  body {
    background: url('<%= asset_path("login_bg.jpg") %>') no-repeat center center fixed;
    background-size: cover;
  }
</style>
<div class='container-fluid'>
  <div class='row'>
    <div class='col-sm-offset-6 col-sm-6 col-md-offset-8 col-md-4 col-xs-12 login-form-panel'>
      <p class='lead'><%= image_tag 'tic_logo_nobg.png', height: 70, class: 'text-center' %>Iniciar sesión</p>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
        <div class="form-group">
          <div class='col-sm-12'>
            <%= f.email_field :email, autofocus: true, placeholder: 'Usuario', class: 'form-control form-control-ticnsp' %>
          </div>
        </div>

        <div class="form-group">
          <div class='col-sm-12'>
            <%= f.password_field :password, autocomplete: "off", placeholder: 'Contraseña', class: 'form-control form-control-ticnsp' %>
          </div>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <div class='col-sm-6'>
              <%= f.check_box :remember_me %>
              <%= f.label 'Recuérdame' %>
            </div>
          </div>
          <div class='form-group'>
            <div class='col-sm-12'>
              <%= f.submit "Log in", class: 'btn btn-primary btn-block' %>
            </div>
          </div>
        <% end -%>
      <% end %>
        <div class='text-center'>
          <%= render "devise/shared/links" %>
        </div>
        <div class='text-center'>
          <p class='small text-muted'>2015 © Talleres Infantiles Católicos - El plagio es pecado</p>
        </div>
    </div>
  </div>
</div>