<%= form_for(@user, html: { class: 'form-horizontal' }) do |f| %>
  <% if @user.errors.any? %>
    <div class='alert alert-danger' id="error_explanation">
      <strong><%= pluralize(@user.errors.count, "error") %> prohibited this tutor from being saved:</strong>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= hidden_field_tag 'user[usertype]', 'tutor'  %>
  <hr>
  <div class="form-group">
    <%= f.label 'Nombre', class: 'control-label col-sm-2' %>
    <div class='col-sm-9'>
      <%= f.text_field :name, class: 'form-control form-control-ticnsp' %>
    </div>
  </div>
  <hr>
  <div class="form-group">
    <%= f.label 'Apellido', class: 'control-label col-sm-2' %>
    <div class='col-sm-9'>
      <%= f.text_field :lastname, class: 'form-control form-control-ticnsp' %>
    </div>
  </div>
  <hr>
  <div class="form-group">
    <%= f.label 'Género', class: 'control-label col-sm-2' %>
    <div class='col-sm-3'>
      <%= f.select :gender, options_for_select([['H','h'],['M','m']], @user.gender), {}, { class: 'form-control form-control-ticnsp' } %>
    </div>
  </div>
  <hr>
  <div class="form-group">
    <%= f.label 'Rol', class: 'control-label col-sm-2' %>
    <div class='col-sm-3'>
      <%= f.select :role, options_for_select([['Padre / Madre','parent'],['Abuelo(a)','grandparent'],['Tío(a)','auntuncle'],['Otro familiar','otherfamily'],['Vecino','neighbor'],['Otro','other']], @user.role), {}, { class: 'form-control form-control-ticnsp' } %>
    </div>
  </div>
  <hr>
  <div class="form-group">
    <%= f.label :email, class: 'control-label col-sm-2' %>
    <div class='col-sm-9'>
      <%= f.email_field :email, class: 'form-control form-control-ticnsp' %>
    </div>
  </div>
  <hr>
  <div class="form-group">
    <%= f.label 'Imagen', class: 'col-sm-2 control-label' %>
    <div class='col-sm-9'>
      <span class='file-input'>
        Browse<%= f.attachment_field :image, class: '' %>
      </span>
      <span class="filename"></span>
    </div>
  </div>
  <hr>
  <div class='form-group'>
    <%= f.label :notes, class: 'control-label col-sm-2' %>
    <div class='col-sm-9'>
      <%= f.text_area :notes, class: 'form-control form-control-ticnsp', style: 'height: 200px; resize: none;' %>
    </div>
  </div>
  <hr>

  <div class="form-group">
    <div class='col-sm-offset-2 col-sm-3'>
      <%= f.submit 'Guardar tutor', class: 'btn btn-ticnsp btn-flat' %>
    </div>
  </div>
<% end %>
<script>
  $('.datepicker').datepicker({
      format: 'mm/dd/yyyy'
  })
</script>
