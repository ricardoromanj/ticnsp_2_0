<% content_for :title, 'Catequesis - TIC' %>
<% content_for :page_title, 'Detalles de catequesis' %>
<% content_for :page_breadcrumb, "<li>#{ link_to '<span class="fa fa-dashboard"></span> Dashboard'.html_safe, root_path }</li><li>#{ link_to 'Catequesis', lectures_path }</li>".html_safe %>

<div class='box box-solid'>
  <div class='box-header with-border'>
    <h3 class='box-title'>Acciones</h3>
  </div>
  <div class='box-body'>
    <%= link_to '<i class="fa fa-mail-reply"></i> Regresar'.html_safe, lectures_path, class: 'btn btn-app' %>
    <%= link_to '<i class="fa fa-pencil"></i> Editar'.html_safe, edit_lecture_path(@lecture), class: 'btn btn-app' %>
    <%= link_to '<i class="fa fa-times"></i> Borrar'.html_safe, @lecture, class: 'btn btn-app bg-maroon pull-right', method: :delete %>
  </div>
</div>

<div class='row'>
  <div class='col-md-4'>
    <div class='box box-solid'>
      <div class='box-header with-border'>
        <h3 class='box-title'>Imagen</h3>
      </div>
      <div class='box-body object-image no-padding'>
        <%= image_tag attachment_url(@lecture, :image), class: 'img-responsive' %>
      </div>
    </div>
    <div class='box box-solid'>
      <div class='box-header with-border'>
        <h3 class='box-title'>Información</h3>
      </div>
      <div class='box-body'>
        <p class='lead'><%= @lecture.name %></p>
        <p>
          <strong>Description:</strong>
          <div class='well'><%= @lecture.description %></div>
        </p>
      </div>
    </div>
  </div>
  <div class='col-md-8'>
    <div class='row'>
      <div class='col-sm-6'>
        <div class='box box-solid'>
          <div class='box-header with-border'>
            <h3 class='box-title'>Coordinadores</h3>
          </div>
          <div class='box-body'>
            <%= render 'lectures/assign_coordinator_form' %>
          </div>
          <table class='table table-condensed'>
            <tbody>
              <% @lecture.users_marked_as(:coordinator_lecture).each do |coordinator| %>
                <tr>
                  <td><%= coordinator.id %></td>
                  <td><%= link_to coordinator.full_name, coordinator %></td>
                  <td><%= link_to '<i class="fa fa-times"></i>'.html_safe, unassign_coordinator_lecture_path(coordinator_id: coordinator.id), class: 'btn btn-xs bg-maroon pull-right', method: :delete %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
    <div class='col-sm-6'>
      <div class='box box-solid'>
          <div class='box-header with-border'>
            <h3 class='box-title'>Niños inscritos</h3>
          </div>
          <div class='box-body'>
            <%= render 'lectures/assign_child_form' %>
          </div>
          <table class='table table-condensed'>
            <tbody>
              <% @lecture.children_marked_as(:enrolled_lecture).each do |child| %>
                <tr>
                  <td><%= child.id %></td>
                  <td><%= link_to child.full_name, child %></td>
                  <td><%= link_to '<i class="fa fa-times"></i>'.html_safe, unenroll_child_lecture_path(child_id: child.id), class: 'btn btn-xs bg-maroon pull-right', method: :delete %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
  </div>
  <div class='box box-solid'>
    <div class='box-header with-border'>
      <h3 class='box-title'>Historial</h3>
    </div>
    <div class='box-body'>

    </div>
  </div>
  </div>
</div>