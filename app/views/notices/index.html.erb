<% content_for :title, 'Avisos - TIC' %>
<% content_for :page_title, 'Avisos' %>
<% content_for :page_breadcrumb, '<li>Avisos</li>'.html_safe %>

<div class='row'>
  <div class='col-xs-12'>
    <div class='box box-solid'>
      <div class='box-header with-border'>
        <h3 class='box-title'>Acciones</h3>
      </div>
      <div class='box-body'>
        <%= link_to '<i class="fa fa-pencil-square-o"></i> Nuevo aviso'.html_safe, new_notice_path, class: 'btn btn-app' %>
        <%= link_to '<i class="fa fa-list"></i> Ver publicados'.html_safe, view_notices_path, class: 'btn btn-app' %>
      </div>
    </div>
  </div>
</div>

<div class='row'>
  <div class='col-xs-12'>
    <div class='box box-solid'>
      <div class='box-header with-border'>
        <h3 class='box-title'>Lista</h3>
      </div>
      <div class='box-body'>
        <%= will_paginate @notices, renderer: BootstrapPagination::Rails %>
      </div>

      <table class='table table-striped table-hover'>
        <tbody>
          <% @notices.each do |notice| %>
            <tr>
              <td><span class='label label-<%= notice.notice_type %>'><%= notice.audience %></span></td>
              <td><%= notice.created_at.strftime('%b %d, %Y %H:%M') %></td>
              <td><b><%= notice.heading %></b></td>
              <td><%= notice.text_stripped[0,30] %>...</td>
              <td><span class='pull-right'><%= link_to 'Show', notice, class: 'btn btn-xs bg-teal' %> <%= link_to 'Edit', edit_notice_path(notice), class: 'btn btn-xs btn-default' %> <%= link_to 'Destroy', notice, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs bg-maroon' %></span></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class='box-body'>
        <%= will_paginate @notices, renderer: BootstrapPagination::Rails %>
      </div>
      
    </div>
  </div>
</div>