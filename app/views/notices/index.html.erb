<% content_for :title, 'Avisos - TIC' %>
<% content_for :page_title, 'Avisos' %>
<% content_for :page_breadcrumb, '<li>Avisos</li>'.html_safe %>

<div class='row'>
  <div class='col-xs-12'>
    <div class='box box-primary'>
      <div class='box-header'>
        <h3 class='box-title'>Lista</h3>
        <div class='box-tools pull-right'>
          <%= link_to 'New Notice', new_notice_path, class: 'btn btn-primary btn-sm' %>
        </div>
      </div>



        <table class='table table-striped table-hover'>
          <tbody>
            <% @notices.each do |notice| %>
              <tr>
                <td><span class='label label-<%= notice.notice_type %>'><%= notice.audience %></span></td>
                <td><%= notice.created_at.strftime('%b %d, %Y %H:%M') %></td>
                <td><b><%= notice.heading %></b></td>
                <td><%= notice.text_stripped[0,30] %>...</td>
                <td class='pull-right'><%= link_to 'Show', notice, class: 'btn btn-xs btn-default' %> <%= link_to 'Edit', edit_notice_path(notice), class: 'btn btn-xs btn-default' %> <%= link_to 'Destroy', notice, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-default' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      
    </div>
  </div>
</div>