<%= form_for(@notice, html: { class: 'form-horizontal' }) do |f| %>
  <% if @notice.errors.any? %>
    <div id="error_explanation">
      <strong><%= pluralize(@notice.errors.count, "error") %> prohibited this notice from being saved:</strong>

      <ul>
      <% @notice.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Título', class: 'control-label col-sm-2' %>
    <div class='col-sm-10'>
      <%= f.text_field :heading, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Mensaje', class: 'control-label col-sm-2' %>
    <div class='col-sm-10'>
      <%= f.text_area :text, class: 'form-control', style: 'height: 200px;' %>
    </div>
    <script>
      $(document).ready(function () {
        $('#notice_text').wysihtml5();
      });
    </script>
  </div>
  <div class="form-group">
    <%= f.label 'Público', class: 'control-label col-sm-2' %>
    <div class='col-sm-3'>
      <%= f.select :audience, options_for_select([['Coordinadores','coordinators'],['Tutores','tutors'],['Todos','all']], selected: @notice.audience), {}, {class: "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Tipo', class: 'control-label col-sm-2' %>
    <div class='col-sm-3'>
      <%= f.select :notice_type, options_for_select([['Información','info'],['Buena noticia','success'],['Atención','warning'],['Urgente','danger']], selected: @notice.notice_type), {}, {class: "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <div class='col-sm-offset-2 col-sm-3'>
      <%= f.submit 'Publicar aviso', class: 'btn btn-info' %>
    </div>
  </div>
<% end %>
