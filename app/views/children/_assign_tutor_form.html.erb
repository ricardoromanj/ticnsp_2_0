<%= form_tag assign_to_tutor_child_path, method: :post do %>
  <%= hidden_field_tag :tutor_id %>
  <div class='input-group'>
    <%= text_field_tag :tutor, nil, placeholder: 'Tutor', class: 'form-control ticnsp-form-control', id: 'tutor-typeahead', autocomplete: 'off' %>
    <span class='input-group-btn'>
      <button class='btn bg-blue btn-flat' type='submit'><i class='fa fa-pencil-square-o'></i> Asignar</button>
    </span>
    <script>
    	$(function () {
    		$.getJSON('/users/typeaheaddata', { usertype: 'tutor' }, function (data) {
    			$('#tutor-typeahead').typeahead({
	    			source: data,
	    			scrollBar: true,
	    			onSelect: function (item) {
	    				$('#tutor_id').val(item.value);
	    			}
	    		});
    		});
    	});
    </script>
  </div>
<% end %>