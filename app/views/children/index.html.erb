<% content_for :title, 'Niños - TIC' %>
<% content_for :page_title, 'Niños' %>
<% content_for :breadcrumb, '<li>Niños</li>'.html_safe %>

<p id="notice"><%= notice %></p>

<table class='table table-condensed table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Lastname</th>
      <th>Gender</th>
      <th>Birthdate</th>
      <th>Image</th>
      <th>Allergies</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @children.each do |child| %>
      <tr>
        <td><%= child.name %></td>
        <td><%= child.lastname %></td>
        <td><%= child.gender %></td>
        <td><%= child.birthdate %></td>
        <td><%= child.image_id %></td>
        <td><%= child.allergies %></td>
        <td><%= child.notes %></td>
        <td><%= link_to 'Show', child %></td>
        <td><%= link_to 'Edit', edit_child_path(child) %></td>
        <td><%= link_to 'Destroy', child, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Child', new_child_path %>
