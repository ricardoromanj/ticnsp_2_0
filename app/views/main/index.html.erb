	<section class='section-map' id='map-location'>
	</section>
	<script>
		// Smooth scroll
		$(document).ready(function() {
			$('a[href=#main], a[href=#aboutus], a[href=#team], a[href=#contact]').bind('click', function(e) {
				var anchor = $(this);
				$('html, body').stop().animate({
					scrollTop: $(anchor.attr('href')).offset().top - 80
				}, 1000);
				e.preventDefault();
			});
			return false;
		});

		// Maps setup
		function initialize() {
			var center = new google.maps.LatLng(31.696608, -106.417541); 
			var mapOptions = {
				center: center,
				zoom: 15,
				scrollwheel: false,
				disableDefaultUI: true,
				draggable: false
			};
			var map = new google.maps.Map(document.getElementById("map-location"),mapOptions);

			var marker = new google.maps.Marker({
				position: new google.maps.LatLng(31.696423, -106.417474),
				map: map,
				title: 'Parroquia Nuestra Señora de la Paz'
			});

			var infowindow = new google.maps.InfoWindow({
				content: '<strong>Rancho El Retiro #3517, Fracc. Pradera Dorada</strong><br>Ciudad Juárez, Chih. MX 32618'
			});

			google.maps.event.addDomListener(window, 'resize', function() {
			    map.setCenter(center);
			});
			
			infowindow.open(map,marker);
		}
		initialize();
	</script>
