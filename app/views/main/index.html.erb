<section class='section-aboutus' id='aboutus'>
	<div class='container-fluid ticnsp-section-title-container' id='ticnsp-section-aboutus-title-container'>
		<h1 class='ticnsp-section-title'>¡Ven a conocer más a <strong>Jesús</strong> divirtiéndote con nosotros!</h1>
	</div>
	<div class='container'>
		<div class='row'>
			<div class='col-sm-6 col-md-3 ticnsp-activity-card-container'>
				<div class='panel panel-default ticnsp-activity-card ticnsp-activity-talleres-card'>
					<div class='panel-body text-center'>
						<%= image_tag "talleres.jpg", class: 'ticnsp-activity-image' %>
						<p class='lead'>Talleres</p>
					</div>
				</div>				
			</div>
			<div class='col-sm-6 col-md-3 ticnsp-activity-card-container'>
				<div class='panel panel-default ticnsp-activity-card ticnsp-activity-catequesis-card'>
					<div class='panel-body text-center'>
						<%= image_tag "catequesis.jpg", class: 'ticnsp-activity-image' %>
						<p class='lead'>Catequesis</p>
					</div>
				</div>
			</div>
			<div class='col-sm-6 col-md-3 ticnsp-activity-card-container'>
				<div class='panel panel-default ticnsp-activity-card ticnsp-activity-retiro-card'>
					<div class='panel-body text-center'>
						<%= image_tag "retiro.jpg", class: 'ticnsp-activity-image' %>
						<p class='lead'>Retiro</p>
					</div>
				</div>				
			</div>
			<div class='col-sm-6 col-md-3 ticnsp-activity-card-container'>
				<div class='panel panel-default ticnsp-activity-card ticnsp-activity-diadejuego-card'>
					<div class='panel-body text-center'>
						<%= image_tag "dias_de_juego.jpg", class: 'ticnsp-activity-image' %>
						<p class='lead'>Días de juego</p>
					</div>
				</div>				
			</div>
		</div>
	</div>
</section>
<section class='section-team' id='team'>
	<div class='container'>
		<h1 class='ticnsp-section-title'>Conoce a nuestra <strong>comunidad</strong> de coordinadores</h1>
		<% ['ana','med','hil','ils','isa','jor','lau','dan','ola','pao','ric','gab'].each_slice(4) do |coord_set| %>
			<div class='row'>
				<% coord_set.each do |coord| %>
					<div class='col-md-3 col-sm-6'>
						<div class='ticnsp-team-member'>
							<%= image_tag "coord_#{coord}.jpg", class: 'ticnsp-team-member-image' %><br/>
							<span class='ticnsp-team-member-name'><%= @coord_info[coord][:name] %></span><br/>
							<span class='ticnsp-team-member-position'><%= @coord_info[coord][:position] %></span>
						</div>
					</div>
				<% end %>
			</div>
		<% end %>
	</div>
</section>
<section class='section-contact' id='contact'>
	<div class='container'>
		<h1 class='ticnsp-section-title'>Si necesitas información, déjanos tus datos:</h1>
		<div class='row'>
			<div class='col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3'>
				<%= render 'layouts/partials/alerts' %>
			</div>
		</div>
		<%= form_tag leave_message_path, class: 'form-horizontal ticnsp-form', method: :post do %>
			<div class='form-group'>
				<div class='col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6'>
					<%= text_field_tag :name, nil, placeholder: 'Nombre', class: 'form-control ticnsp-form-control', required: true%>
				</div>
			</div>
			<div class='form-group'>
				<div class='col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6'>
					<%= email_field_tag :email, nil, placeholder: 'E - mail', class: 'form-control ticnsp-form-control', required: true%>
				</div>
			</div>
			<div class='form-group'>
				<div class='col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6'>
					<%= text_area_tag :message_text, nil, placeholder: 'Mensaje', class: 'form-control ticnsp-form-control', style: 'resize: none;', required: true%>
				</div>
			</div>
			<div class='form-group'>
				<div class='col-xs-offset-1 col-sm-offset-3 col-xs-10 col-sm-6'>
					<%= submit_tag 'Enviar', class: 'btn btn-ticnsp-form-btn btn-block' %>
				</div>
			</div>
		<% end %>
	</div>
</section>

