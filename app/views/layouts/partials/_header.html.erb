<header class='main-header'>
	<%
		# Logo
	%>
	<a href='<%= dashboard_path %>' class='logo'>
		<%
			# Mini logo for sidebar mini 50 x 50 pixels
		%>
		<span class='logo-mini'>tic</span>
		<%
			# Logo for regular state and mobile devices 
		%>
		<span class='logo-lg'><b>TIC</b>NSP.org</span>
	</a>

	<%
		# Header Navbar
	%>
	<nav class='navbar navbar-static-top' role='navigation'>
		<a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button" onclick='toggleUserSidebar(<%= current_user.id %>)'>
	      	<span class="sr-only">Toggle navigation</span>
		</a>
		<%
			# Right menu
		%>
		<div class='navbar-custom-menu'>
			<ul class='nav navbar-nav'>
				<%
					# Mensajes
				%>
				<li class='dropdown messages-menu'>
					<%= render 'layouts/partials/messages' %>
				</li>
				<%
					# Notifications
				%>
				<li class="dropdown notifications-menu">
	                <%= render 'layouts/partials/notifications' %>
	            </li>
	            <%
	            	# Tasks menu
	            %>
	            <li class="dropdown tasks-menu">
	                <%= render 'layouts/partials/tasks' %>
	            </li>
				<%
					# User account menu
				%>
				<li class='dropdown user user-menu'>
					<a href='#' class='dropdown-toggle' data-toggle='dropdown'>
						<%= image_tag current_user.current_image, class: 'user-image', alt: 'User Image' %>
						<span class='hidden-xs'>Ricardo Roman</span>
					</a>
					<ul class='dropdown-menu'>
						<%
							# User menu
						%>
						<li class='user-header'>
							<%= image_tag current_user.current_image, class: 'img-circle', alt:'User Image' %>
							<p>
								Ricardo Roman - Coordinador
								<small>Miembro desde 2010</small>
							</p>
						</li>
						<li class='user-body'>
							<div class="col-xs-4 text-center">
		                      <a href="#">Followers</a>
		                    </div>
		                    <div class="col-xs-4 text-center">
		                      <a href="#">Sales</a>
		                    </div>
		                    <div class="col-xs-4 text-center">
		                      <a href="#">Friends</a>
		                    </div>
						</li>
						<li class='user-footer'>
							<div class="pull-left">
		                      <a href="#" class="btn btn-default btn-flat">Profile</a>
		                    </div>
		                    <div class="pull-right">
		                      <%= link_to 'Cerrar sesiÃ³n', destroy_user_session_path, method: :delete, class: 'btn btn-default btn-flat' %>
		                    </div>
						</li>
					</ul>
				</li>
				<%
					# Control sidebar toggle
				%>
				<li>
	                <a href="#" data-toggle="control-sidebar"><i class="fa fa-send-o"></i></a>
	            </li>
			</ul>
		</div>
	</nav>
</header>